@model IEnumerable<sattiAldi.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Kategori Listesi</h4>

<div class="row">
    <div class="col-xs-12">
         <div class="box">
             <div class="box-body">
                 <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                 <br />
                 <table id="example1" class="table table-bordered table-striped">
                     <thead>
                         <tr>
                             <th>Kategori Adı</th>
                             <th>Açıklama</th>
                             <th></th>
                         </tr>
                     </thead>
                     <tbody>
                         @foreach (var item in Model)
                         {
                             <tr>
                                 <td>
                                     @Html.DisplayFor(modelItem => item.Name)
                                 </td>
                                 <td>
                                     @Html.DisplayFor(modelItem => item.Description)
                                 </td>
                                 <td>
                                     <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                     <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                 </td>
                             </tr>
                         }

                     </tbody>
                     <tfoot>
                         <tr>
                             <th>Kategori Adı</th>
                             <th>Açıklama</th>
                             <th></th>
                         </tr>
                     </tfoot>
                 </table>
             </div>
        </div>
    </div>
</div>

